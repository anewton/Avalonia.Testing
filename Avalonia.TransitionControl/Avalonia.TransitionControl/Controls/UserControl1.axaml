<UserControl 
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="Avalonia.TransitionControl.Controls.UserControl1"
    x:DataType="system:String"
    x:CompileBindings="True"
    xmlns:system="using:System"
    Background="Transparent">
    <Grid>
        <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="Blue" BorderThickness="3" />
        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="UserControl1" />
        <Grid
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"
            ShowGridLines="True"
            RowDefinitions="30,30,30,30,30,30,30,30,30,30"
            ColumnDefinitions="30,30,30,30,30,30,30,30,30,30" />
    </Grid>
    
</UserControl>
