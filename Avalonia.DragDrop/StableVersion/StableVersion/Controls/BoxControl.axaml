<UserControl 
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" 
    d:DesignWidth="120" 
    d:DesignHeight="120"
    x:Class="StableVersion.Controls.BoxControl">
    <Grid
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          Margin="0"
          MinWidth="120"
          MinHeight="120">
        <Border
            x:Name="boxBackgroundBorder"
            Background="Black"
            Margin="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"  />
        <Border
            BorderBrush="White"
            BorderThickness="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" />
        <TextBlock
            Margin="6,4,0,0"
            TextWrapping="Wrap"
            Text="{Binding Name}"
            Foreground="White" />
    </Grid>
</UserControl>
