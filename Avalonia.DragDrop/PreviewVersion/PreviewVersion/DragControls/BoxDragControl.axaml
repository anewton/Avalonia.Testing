<dragControls:DragEnabledPanel
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="120" d:DesignHeight="120"
	x:Class="PreviewVersion.DragControls.BoxDragControl"
	xmlns:dragControls="clr-namespace:PreviewVersion.DragControls;assembly=PreviewVersion"
	Background="Black">
	<Grid
		HorizontalAlignment="Stretch"
		VerticalAlignment="Stretch"
		Margin="0"
		Width="120"
		Height="120">
		<Border
            BorderBrush="White"
            BorderThickness="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" />
		<TextBlock
            Margin="6,4,0,0"
            TextWrapping="Wrap"
            Text="{Binding Name}"
            Foreground="White" />
		<Button Width="100" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" />
	</Grid>
</dragControls:DragEnabledPanel>
